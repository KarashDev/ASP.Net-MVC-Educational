<!--ВАЖНО: шаблон файла при создании - Razor Layout-->
<!--Если этот файл будет находиться в директории с самим представлением, он исполнится как приоритетный-->
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
</head>
<body>
    <!--меню-->
    <nav class="navbar navbar-inverse">
        <div class="container">
            <div>
                <ul class="nav navbar-nav">
                    <li>
                        <a href="~/Home/Index" class="navbar-brand">Главная</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>
    <!--основной контент-->
    <div class="container body-content">
        <!--метод-плейсхолдер: в это место вставляется любое представление, подключенное к этому шаблону;
        также можно регулировать подключение отдельных секций методом RenderSection-->
        @RenderBody()
        <hr />
        <footer>
            <p>© 2021 - CarStore</p>
        </footer>
    </div>
</body>
</html>
